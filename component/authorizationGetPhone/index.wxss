.openBindPhone{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  position: fixed;
  z-index: 99;
  top: 0;
  left: 0;
  box-sizing: border-box;
}
.bingPhoneCentent{
  width: 524rpx;
  height: 658rpx;
  border-radius: 15rpx;
  position: relative;
  margin:-329rpx auto 0 auto;
  top: 50%;
}
.bingPhonebg{
  width: 524rpx;
  height: 658rpx;
  border-radius: 15rpx;
}
.bindPhoneCenter{
    width: 100%;
    height: 455rpx;
    position: absolute;
    bottom: 0;
}
.bindPhoneMagess{
  width: 100%;
  padding-top: 140rpx;
}
.bindPhoneTitle{
  font-size: 32rpx;
  color:#333;
  font-weight: bold;
  text-align: center;
  line-height: 1;
  margin-bottom: 26rpx;
}
.bindPhoneText{
  font-size: 28rpx;
  color:#999;
  text-align: center;
  line-height: 1;
  margin-bottom: 16rpx;
}
.confirmButton{
  width: 444rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  color:#fff;
  background: #F2922F;
  border-radius: 8rpx;
  margin:0 auto;
  position: absolute;
  bottom: 40rpx;
  left: 40rpx;
  right: 40rpx;
}
.closeBindPhone{
  width: 90rpx;
  height: 90rpx;
  position: absolute;
  top: 0;
  right: 0;
  display: block;
}
.closeX{
  width: 30rpx;
  height: 30rpx;
  display: block;
  margin:0 auto;
  position: relative;
  top: 50%;
  margin-top: -15rpx;
}