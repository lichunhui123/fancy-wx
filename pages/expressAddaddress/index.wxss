  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.address_item4 {
  width: 720rpx;
  min-height: 260rpx;
  border-bottom: 1rpx solid #ebebeb;
  margin-left: 30rpx;
}

.add_name {
  color: #999;
  font-size: 28rpx;
  padding-right: 60rpx;
}

.add_tel {
  color: #999;
  font-size: 28rpx;
  padding-right: 60rpx;
}

.area {
  color: #999;
  font-size: 30rpx;
  padding-right: 60rpx;
}

.detadd {
  color: #999;
  font-size: 30rpx;
  padding: 20rpx 0 10rpx 0;
}

.address_item input, .address_item2 input {
  width: 574rpx;
  height: 100rpx;
  font-size: 28rpx;
