/* pages/addAddress/index.wxss */

html, page {
  width: 100%;
  height: 100%;
}

.address_wrap {
  width: 100%;
  height: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.address_section {
  flex: 1;
  overflow: hidden;
}

.address_item {
  width: 720rpx;
  height: 100rpx;
  border-bottom: 1rpx solid #ebebeb;
  margin-left: 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.address_item2 {
  width: 720rpx;
  height: 100rpx;
  margin-left: 30rpx;
