/* pages/discount/index.wxss */

html, page {
  width: 100%;
  height: 100%;
  font-family: PingFangSC-Regular;
}

.discountWrap {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.dis_head {
  width: 100%;
  height: 88rpx;
  font-weight: 600;
  box-shadow: inset 0 -1px 0 0 #ebebeb;
  display: flex;
  justify-content: space-around;
  align-items: flex-end;
  font-size: 28rpx;
  color: #999;
  background: white;
  position: fixed;
  z-index: 99;
  top: 0;
}

.dis_top {
  width: 100%;
  height: 88rpx;
  display: flex;
}

.head_item {
  flex: 1;
  line-height: 88rpx;
  text-align: center;
  position: relative;
}

.headActive {
  color: #333;
}

.head_bottom {
  width: 94rpx;
  height: 4rpx;
  border-radius: 2rpx;
  background: #f2922f;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%)
}

.ticket_content {
  flex: 1;
  overflow-y: scroll;
  background: #f8f8f8;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}
.ticket_content_no{
  background: #fff;
}
.ticket_item {
  width: 710rpx;
  height: auto;
  background: #fff;
  border-radius: 10rpx;
  margin-top: 20rpx;
  flex-shrink: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.ticket_left {
  width: 230rpx;
  height: 116rpx;
  color: #f2922f;
  display: flex;
  font-size: 32rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.ticket_left_con{
  position: absolute;
  left: 0;
  top: 0;
  width: 86rpx;
  height: 86rpx;
}
.ticket_left view:first-child{
  font-size: 32rpx;
  color: #F2922F;
  line-height: 52rpx;
  height:52rpx;
}
.ticket_left text{
  font-size: 62rpx;
}
.ticket_left view:last-child{
  font-size: 26rpx;
  line-height: 26rpx;
  color: #F2922F;
  margin-top: 21rpx;
}
.ticket_right {
  width: 480rpx;
  height: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.ticket_right_con {
  width: 460rpx;
  height: auto;
  padding: 32rpx 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.ticket_name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.ticket_time {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  width: 425rpx;
}

.ticket_type {
  height: 24rpx;
  font-size: 24rpx;
  color: #999;
}

.usebtn {
  width: 116rpx;
  height: 54rpx;
  border: 1rpx solid #f2922f;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #f2922f;
  text-align: center;
  line-height: 54rpx;
  margin-right: 20rpx;
}
.employ{
  width: 90rpx;
  height: 90rpx;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 999999;
}
.employ image{
  width: 90rpx;
  height: 90rpx;
}
.hactive{
  color: #999;
}
.nologin{
  width: 100%;
  height:100vh;
  background: #fff;
  text-align: center;
}
.nologin .goodnodata{
  width: 450rpx;
  height:450rpx;
  margin: 82rpx auto 20rpx;
}
.notitle{
  font-size: 24rpx;
  color: #333333;
}