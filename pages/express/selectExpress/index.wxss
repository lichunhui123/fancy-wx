/*全屏遮罩*/
.mask_bg{
  position: fixed;
  top:0;
  left:0;
  width:100vh;
  height:100vh;
  opacity: 0.5;
  background: #000000;
  z-index: 2;
  overflow: hidden;
}
.show{
  display: block;
}
.hide{
  display:none;
}
.mask_con{
  width: 100%;
  max-height: 700rpx;
  overflow: hidden;
  overflow-y: scroll;
  z-index: 3;
  background: #ffffff;
  position:fixed;
  bottom:-700rpx;
  transition:all 0.2s ease-in;
}
.mask_show{
  bottom:0;
}
.mask_top{
  border-bottom:1rpx solid #EBEBEB;
  height:88rpx;
  position:relative;
}
.mask_title{
  text-align: center;
  font-size: 36rpx;
  color: #333333;
  line-height: 88rpx;
}
.mask_del{
  position:absolute;
  top:24rpx;
  right:30rpx;
}
.mask_del image{
  width:40rpx;
  height:40rpx;
}
.mask_center{
  margin-bottom: 132rpx;
}
.mask_list{
  display: flex;
  width:100%;
  height:120rpx;
  align-items: center;
  box-sizing: border-box;
  padding-left: 30rpx;
  border-bottom:1rpx solid #EBEBEB;
}
.mask_list image{
  width:80rpx;
  height:80rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}
.mask_list text{
  font-size: 30rpx;
  color: #333333;
}
.mask_active{
  background: #F8F8F8;
}
