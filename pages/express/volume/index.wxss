/*全屏遮罩*/
.mask_bg{
  position: fixed;
  top:0;
  left:0;
  width:100vh;
  height:100vh;
  opacity: 0.5;
  background: #000000;
  z-index: 2;
  overflow: hidden;
}
.show{
  display: block;
}
.hide{
  display:none;
}
.mask_con{
  z-index: 3;
  background: #ffffff;
  position:fixed;
  bottom:-700rpx;
  width:100%;
  transition:all 0.2s ease-in;
}
.mask_show{
  bottom:0;
}
.mask_top{
  border-bottom:1rpx solid #EBEBEB;
  height:88rpx;
  position:relative;
}
.mask_title{
  text-align: center;
  font-size: 36rpx;
  color: #333333;
  line-height: 88rpx;
}
.mask_del{
  position:absolute;
  top:24rpx;
  right:30rpx;
}
.mask_del image{
  width:40rpx;
  height:40rpx;
}
.mask_center{
  display:flex;
  margin:40rpx 30rpx 0;
  align-items: flex-start;
}
.mask_input{
  width:192rpx;
  text-align: center;
}
.mask_input input{
  width:192rpx;
  height:72rpx;
  background: #F8F8F8;
  border-radius: 6rpx;
  border:none;
  font-size: 28rpx;
  line-height: 72rpx;
}
.mask_input view:nth-child(2){
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #999999;
  line-height: 24rpx;
}
.mask_symbol{
  margin:28rpx 20rpx;
  width:16rpx;
  height:16rpx;
}
.mask_bottom{
  margin-top: 360rpx;
  width:100%;
  height:100rpx;
  background: #F2922F;
  text-align: center;
  font-size: 32rpx;
  color: #FFFFFF;
  line-height: 100rpx;
}
