.support_value{
    width:750rpx;
    background:#F8F8F8;
    padding:20rpx;
    height:100vh;
    box-sizing: border-box;
}
.support_con{
    background: #ffffff;
    height:100%;
}
.support_title{
    font-size: 32rpx;
    color: #333333;
    text-align: center;
    line-height: 112rpx;
}
.support_value_num{
    width:650rpx;
    height:80rpx;
    margin:0 auto;
    position:relative;
}
.support_value_num input{
    width:100%;
    height:100%;
    border:none;
    background: #F8F8F8;
    border-radius: 40rpx;
    text-align: center;
    font-size: 32rpx;
    color: #333333;
    line-height: 80rpx;
}
.support_value_num text{
    position:absolute;
    right:30rpx;
    top:24rpx;
    font-size: 32rpx;
    color: #333333;
}
.support_expense{
    text-align: right;
    font-size: 32rpx;
    color: #666666;
    margin:32rpx 30rpx 42rpx 0;
}
.support_expense text{
    font-size: 36rpx;
    color: #EF0000;
}
.support_tip{
    margin:0 30rpx;
}
.tip_title{
    font-size: 32rpx;
    color: #333333;
    line-height: 32rpx;
}
.tip_desc{
    margin-top:17rpx;
    font-size: 28rpx;
    color: #999999;
    line-height: 42rpx;
}
.support_button{
    position:absolute;
    bottom:40rpx;
    left:50rpx;
    width:650rpx;
    height:88rpx;
    text-align: center;
    font-size: 32rpx;
    line-height: 88rpx;
    color: #FFFFFF;
    background: #F2922F;
    border-radius: 8rpx;
}