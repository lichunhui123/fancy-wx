html, page {
    width: 100%;
    height: 100%;
    font-family: PingFangSC-Regular;
    background: #F8F8F8;
}
.data_content{
    display:flex;
}
.data_left_list{
    width:172rpx;
    height:100%;
    overflow: auto;
}
.data_left_list view{
    width:172rpx;
    height:100rpx;
    font-size: 28rpx;
    color: #666666;
    line-height: 100rpx;
    background:  #F8F8F8;
    text-align: center;
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;/*显示几行*/
    position: relative;
}
.data_left_list .active{
    color: #333333;
    background: #FFFFFF;
    font-weight: 600;
}
.data_left_list .goods_num{
  position: absolute;
  right:10rpx;
  top:10rpx;
  width:28rpx;
  height:28rpx;
  background: #FF3B30;
  color:#ffffff;
  border-radius: 50%;
  font-size: 16rpx;
  line-height: 28rpx;
  text-align: center;
}
.data_right_list{
    width:578rpx;
    height:100%;
    overflow: auto;
    background: #ffffff;
}
.data_goods_item{
    width:538rpx;
    height:240rpx;
    margin:0 20rpx;
    display:flex;
    position: relative;
    border-bottom: 1rpx solid #EBEBEB;
}
.data_goods_item:last-of-type{
  border-bottom: none;
}
.data_goods_item_left{
    width:200rpx;
    height:200rpx;
    margin:20rpx 10rpx 20rpx 0;
}
.data_goods_item_left image{
    width:200rpx;
    height:200rpx;
    border-radius: 10rpx;
}
.data_goods_item_right{
    width:338rpx;
    margin: 15rpx 0 20rpx;
    position: relative;
}
.goods_name{
    max-height:76rpx;
    font-size: 28rpx;
    color: #333333;
    line-height: 38rpx;
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;/*显示几行*/
    font-family: PingFangSC-Medium;
    font-weight: 600;
}
.goods_spec{
    font-size: 24rpx;
    color: #999999;
    line-height: 24rpx;
    margin-top: 5rpx;
}
.goods_price1{
    position: absolute;
    bottom:10rpx;
    left:0;
}
.goods_price_discount{
    font-size: 32rpx;
    line-height: 32rpx;
    color: #FF5403;
    font-family: PingFangSC-Medium;
    font-weight: 600;
}
.goods_price_origin{
    font-size: 20rpx;
    line-height: 20rpx;
    margin-top: 8rpx;
    color: #999999;
    text-decoration:line-through;
}
.disnum{
   font-size: 20rpx;
}
.disign{
   font-size: 28rpx;
}
.addbox{
    width: 196rpx;
    height: 102rpx;
    display:flex;
    align-items: center;
    justify-content: flex-end;
    position: absolute;
    right:-10rpx;
    bottom:-10rpx;
}
.addbox .liue{
    width: 62rpx;
    height:102rpx;
    box-sizing: border-box;
    padding:30rpx 10rpx;
}
.addbox image{
    width: 42rpx;
    height:42rpx;
}
.addbox input{
    width: 40rpx;
    height: 42rpx;
    text-align: center;
    font-size: 28rpx;
}
.nologin{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
    padding-top: 82rpx;
}
.nologin .goodnodata{
    width: 450rpx;
    height:450rpx;
    margin-bottom: 40rpx;
}
.notitle{
    font-size: 24rpx;
    color: #333333;
}
.shopbottom{
    width:100%;
    height:198rpx;
}


  