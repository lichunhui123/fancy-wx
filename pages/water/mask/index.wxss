/* pages/water/mask/index.wxss */

html, page {
  width: 100%;
  height: 100%;
  font-family: PingFangSC-Medium;
}

.waterMask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999999;
  background: rgba(0, 0, 0, 0.70);
}

.conent {
  width: 570rpx;
  height: 350rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.conent image {
  width: 100%;
  height: 100%;
}

.addBox {
  width: 570rpx;
  position: absolute;
  left: 0;
  bottom: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.add_address {
  width: 188rpx;
  height: 70rpx;
  background: #f2922f;
  border-radius: 34rpx;
  text-align: center;
  line-height: 70rpx;
  color: white;
  font-size: 26rpx;
  margin-top: 30rpx;
}

.add_titlet {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.add_title {
  font-size: 24rpx;
  color: #999;
}
