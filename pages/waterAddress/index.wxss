/* pages/waterAddress/index.wxss */

html, page {
  width: 100%;
  height: 100%;
}

.addressWrap {
  width: 100%;
  height: 100%;
  border-top: 1rpx solid #ebebeb;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  padding-left: 30rpx;
}
.address_content{
  height: 100%;
  overflow-y: scroll;
}
.address_item{
  min-height: 128rpx;
  max-height: 164rpx;
  box-sizing: border-box;
  padding: 30rpx 30rpx 30rpx 0;
  border-bottom: 1rpx solid #EBEBEB;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.name_left{
  display: inline-block;
  max-width: 180rpx;
  text-overflow:ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.item_left{
  width: 510rpx;
}
.item_right{
  height: 100%;
  display: flex;
  align-items: center;
}
.address_name{
  height: 40rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #333333;
  font-weight: 600;
}
.tel{
  padding-left: 30rpx;
  padding-right: 10rpx;
}
.address_x{
  width: 510rpx;
  max-height: 75rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;/*显示几行*/
  font-size: 24rpx;
  color: #999999;
}
.default{
  display: inline-block;
  width: 60rpx;
  height: 30rpx;
  flex-shrink: 0;
  background: #F2922F;
  border-radius: 4rpx;
  font-size: 20rpx;
  color: #FFFFFF;
  text-align: center;
  line-height: 30rpx;
}
.addseditt {
  width: 40rpx;
  height: 40rpx;
  margin-right: 50rpx;
}
.addsedit {
  width: 40rpx;
  height: 40rpx;
}

.add_address{
  width: 690rpx;
  height: 88rpx;
  background: #F2922F;
  border-radius: 8rpx;
  position: fixed;
  bottom: 30rpx;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #FFFFFF;
}
.add_bottom{
  height: 128rpx;
}
.nodata{
  margin-top: 82rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}
.nodata image{
  width: 450rpx;
  height: 450rpx;
}
.not{
  font-size: 24rpx;
  color: #333333;
  margin-top: 20rpx;
}
.addbottom{
  width: 188rpx;
  height: 60rpx;
  background: #FFFFFF;
  border: 2rpx solid #F2922F;
  border-radius: 34rpx;
  color: #F2922F;
  font-size: 26rpx;
  text-align: center;
  line-height: 60rpx;
  margin-top: 20rpx;
}