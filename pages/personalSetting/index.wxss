.setting_con{
    margin-left: 30rpx;
}
.setting_item{
    width:100%;
    height:100rpx;
    padding-right: 30rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid #EBEBEB;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.setting_text{
    font-size: 30rpx;
    color: #333333;
    line-height: 30rpx;
}
.setting_icon{
    width:118rpx;
    height:118rpx;
    border-radius: 50%;
}
.bind_btn{
    margin:0;
    width:160rpx;
    height:60rpx;
    background: #F2922F;
    border-radius: 30rpx;
    font-size: 28rpx;
    color: #FFFFFF;
    line-height: 60rpx;
    border: none;
}
.setting_right{
    display: flex;
    align-items: center;
}
.changeBind_btn{
    border: 1rpx solid #F2922F;
    border-radius: 30rpx;
    width:160rpx;
    height:58rpx;
    font-size: 28rpx;
    line-height: 58rpx;
    color: #F2922F;
    padding:0;
    text-align: center;
    background: none;
    margin-left: 10rpx;
    box-sizing: border-box;
}
.setting_right image{
    width:14rpx;
    height:24rpx;
    margin-left: 10rpx;
}