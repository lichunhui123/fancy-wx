/* pages/group/index.wxss */

html, page {
  width: 100%;
  font-family: PingFangSC-Medium;
}

.groupWrap {
  width: 100%;
}
.page ::-webkit-scrollbar {
  color: transparent;
}
.header {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-left: 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
  background: white;
  font-weight: 600;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
  box-shadow: 0 4rpx 6rpx 0 rgba(0,0,0,0.06);
}
.headerleft{
  height: 80rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.weizi {
  width: 44rpx;
  height: 44rpx;
  margin-right: 20rpx;
}

.righticon {
  width: 12rpx;
  height: 22rpx;
  margin-left: 10rpx;
}
.headernav {
  width: 100%;
  height: 88rpx;
  font-weight: 600;
  background:white;
  box-sizing: border-box;
  border-bottom: 1rpx solid #EBEBEB;
  margin-top: 80rpx;
}
.nav{
  padding: 0 30rpx;
}
.nonav{
  width: 100%;
  height: 88rpx;
}
.headernav ::-webkit-scrollbar {
  color: transparent;
}

.nav {
  width: auto;
  height: 88rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color:#999;
}
.scrollBox{
  box-sizing: border-box;
}
.navItem{
  height: 88rpx;
  margin-right: 90rpx;
  position: relative;
  display:flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
}
.navItem:first-child{
  margin:0 84rpx 0 0;
}
.navActive{
  color:#333;
}
.tab-icon{
  position:absolute;
  left:-24rpx;
  top:1rpx;
  width:32rpx;
  height:38rpx;
}
.navbut{
  width: 60rpx;
  height: 4rpx;
  background: #F2922F;
  border-radius: 2px;
  position: absolute;
  bottom:2rpx;
  left:50%;
  transform: translateX(-50%);
}
.groupcontent{
  width: 100%;
  padding-left: 30rpx;
  display:flex;
  flex-direction: column;
  box-sizing: border-box;
  position: relative;
}
.goods_list{
  width: 100%;
  height: 280rpx;
  background: #FFFFFF;
  border-bottom: 1rpx solid #EBEBEB;
  display:flex;
  padding-right: 30rpx;
  box-sizing: border-box;
}
.goods_list image{
  width: 220rpx;
  height: 220rpx;
}
.list_left{
  width:220rpx;
  height: 280rpx;
  display:flex;
  align-items: center;
  margin-right: 20rpx;
  position: relative;
}
.goodimg{
  width:220rpx;
  height: 220rpx;
  border-radius: 10rpx;
}
.masks{
  width:220rpx;
  height: 220rpx;
  position: absolute;
  top: 30rpx;
  left: 0;
  background: rgba(0,0,0,0.70);
  text-align: center;
  line-height: 220rpx;
  color: white;
  font-size: 32rpx;
}
.goods_list .rush_icon{
  position:absolute;
  width:80rpx;
  height:80rpx;
  top:20rpx;
  left:0;
}
.list_right{
  flex:1;
  padding:20rpx 0;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.good_title{
  max-height:84rpx;
  font-weight: 600;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;/*显示几行*/
  line-height: 42rpx;
  font-size: 28rpx;
  color:#333;
}
.spec{
  font-size: 24rpx;
  line-height: 24rpx;
  color: #999;
  font-weight: 500;
  margin-top: 7rpx;
}
.good_fen{
  font-size: 24rpx;
  color:#999;
}
.good_ticket{
  display:inline-block;
  height: 34rpx;
  font-size: 22rpx;
  color: #FF3B30;
  border: 1px solid #FF3B30;
  border-radius: 4px;
  padding:0rpx 10rpx;
}
.discount{
  font-size: 32rpx;
  line-height: 32rpx;
  color: #FF3B30;
}
.original{
  text-decoration: line-through;
  margin-left: 20rpx;
  font-size: 20rpx;
  color: #999999;
  line-height: 24rpx;
}
.discountY{
  font-size: 36rpx;
  color: #FF3B30;
  padding-right: 18rpx;
}
.disnum{
  font-size: 20rpx;
}
.disign{
  margin-left: 10rpx;
  font-size: 28rpx;
}
.price{
  font-size: 24rpx;
  line-height: 24rpx;
  margin-top: 14rpx;
  color: #999999;
  text-decoration:line-through;
}
.price2{
  font-size: 28rpx;
  color: #EF0000;
}
.mou{
  font-size: 22rpx;
  color:#999;
  text-decoration:line-through;
}
.mou1{
  font-size: 24rpx;
  color:#999;
  padding-left: 27rpx;
  text-decoration:line-through;
}
.goodbottom{
  line-height: 30rpx;
  margin-top: 14rpx;
}
.addbox{
  width: 196rpx;
  height: 102rpx;
  display:flex;
  align-items: center;
  justify-content: flex-end;
  position: absolute;
  bottom: 0rpx;
  right: -10rpx;
}
.liue{
  width: 62rpx;
  height:102rpx;
  box-sizing: border-box;
  padding:30rpx 10rpx 30rpx 10rpx;
}
.addbox image{
  width: 42rpx;
  height:42rpx;
}

.addbox input{
  width: 40rpx;
  height: 42rpx;
  text-align: center;
  font-size: 28rpx;
}

.shopbottom{
  width:100%;
  height:200rpx;
}
.nologin{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  padding-top: 162rpx;
}
.nologin .goodnodata{
  width: 450rpx;
  height:450rpx;
  margin-bottom: 40rpx;
}
.notitle{
  font-size: 24rpx;
  color: #333333;
}
